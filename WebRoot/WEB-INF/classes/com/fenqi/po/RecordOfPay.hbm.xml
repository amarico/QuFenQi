<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping package="com.fenqi.po">
    	<class name="RecordOfPay" table="recordofpay">
    		<id name="id" column="id">
    			<generator class="native"/>
    		</id>
    		<property name="userName" column="username"></property>
    		<property name="productName" column="productname"></property>
    		<property name="orderId" column="orderid"></property>
    		<property name="monthPay" column="monthpay"></property>
    		<property name="monthTime" column="monthtime"></property>
			<property name="hasPaid" column="haspaid"></property>
			<property name="needPay" column="needpay"></property>
    		<property name="monthPaid" column="monthpaid"></property>
    		<property name="needMonthPay" column="needmonthpay"></property>
    		<property name="price" column="price"></property>
			<property name="allMoney" column="allmoney"></property>
			<property name="earn" column="earn"></property>
			<property name="date" column="submitdate"></property>
			<property name="state" column="state"></property>
    	</class>
    </hibernate-mapping>