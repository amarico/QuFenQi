body
{
    color: #555;
    font-size: 12px;
    font-family: 'Microsoft YaHei';
    letter-spacing: 2px;
}

h2, h3
{
    font-weight: normal;
}

ul
{
    margin: 0px;
    border: 1px solid #ddd;
    height: 316px;
    width: 250px;
    padding-right: 30px;
}

    ul li
    {
        list-style-type: none;
        height: 31px;
        margin-bottom: 20px;
        padding: 0px;
    }

        ul li .tetx
        {
            width: 100%;
            height: 100%;
            border: 1px solid #ddd;
        }

#header
{
    width: 807px;
    height: 60px;
    display: table-cell;
    display: table;
}

    #header img
    {
        display: table-cell;
        vertical-align: middle;
    }

#content
{
    width: 879px;
    margin-top: 20px;
    margin-bottom: 50px;
    height: 347px;
}

#tool
{
    width: 807px;
    height: 60px;
    text-align: center;
    color: #a5a5a5;
    margin-top: 100px;
}

#left
{
    float: left;
    width: 557px;
    height: 347px;
}

#imgLeft
{
    width: 100%;
    height: 100%;
    margin-bottom: 10px;
}


#right
{
    width: 322px;
    float: left;
}

#main
{
    position: absolute;
    top: 4%;
    left: 17%;
}

#btnSearch
{
    border: 0px;
    background-color: #f00;
    color: #fff;
}

    #btnSearch:checked
    {
-webkit-box-shadow: inset 0 2px 2px rgba(0,0,0,0.1);
-moz-box-shadow: inset 0 2px 2px rgba(0,0,0,0.1);
box-shadow: inset 0 2px 2px rgba(0,0,0,0.1);
    }

    #btnSearch:hover
    {
-webkit-box-shadow: inset 0 2px 2px rgba(0,0,0,0.1);
-moz-box-shadow: inset 0 2px 2px rgba(0,0,0,0.1);
box-shadow: inset 0 2px 2px rgba(0,0,0,0.1);
    }

a:visited, a:link
{
    color: #555;
    text-decoration: none;
}

a:hover
{
    color: #f54343;
    text-decoration: underline;
}

#username
{
    background-image: url("../images/username.png");
    background-color: #fff;
    background-repeat: no-repeat;
    padding-left: 35px;
    width: 210px;
}

#password
{
    background-image: url("../images/password.JPG");
    background-repeat: no-repeat;
    padding-left: 35px;
    width: 210px;
}

#tool a:visited, #tool a:link
{
    color: #a5a5a5;
    text-decoration: none;
}

#tool a:hover
{
    color: #f54343;
    text-decoration: underline;
}

.liRegist
{
    background-color: #f1eeee;
    height: 65px;
    padding: 1px;
    line-height: 1;
    text-align: center;
    color: rgba(7, 6, 6, 0.50);
    border: 1px solid #ddd;
}



input[type=checkbox]
{
    -webkit-appearance: none;
    width: 13px;
    height: 13px;
    margin: 0;
    cursor: pointer;
    vertical-align: bottom;
    background: #fff;
    border: 1px solid #B9BBBE;
    -webkit-border-radius: 1px;
    -moz-border-radius: 1px;
    border-radius: 1px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    position: relative;
}


    input[type=checkbox]:hover
    {
        border-color: #c6c6c6;
        -webkit-box-shadow: none;
        -moz-box-shadow: none;
        box-shadow: none;
    }

    input[type=checkbox]:checked
    {
        background-image: url("../images/checkBackground.png");
    }




    input[type=checkbox]:focus
    {
        outline: none;
        -webkit-box-shadow: none;
        -moz-box-shadow: none;
        box-shadow: none;
    }
